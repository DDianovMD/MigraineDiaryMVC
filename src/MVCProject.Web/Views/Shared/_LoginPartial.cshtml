@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @if (User.IsInRole("Doctor"))
            {
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile"><i class="fa-solid fa-user-doctor fa-xl"></i></a>
            }
            else
            {
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile"><i class="fa-solid fa-user-tie fa-xl"></i></a>
            }
        </li>
        <li class="nav-item">
            <form class="form-inline" title="Logout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white"><i class="fa-solid fa-right-from-bracket fa-xl"></i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    }
</ul>